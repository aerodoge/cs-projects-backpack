# 双交易所套利配置 (通过环境变量)
# 使用 LIGHTER_ 前缀，自动映射到配置项

# Lighter交易所配置 (必填项)
LIGHTER_LIGHTER_API_KEY=your_lighter_api_key_here
LIGHTER_LIGHTER_SECRET_KEY=your_lighter_secret_key_here
LIGHTER_LIGHTER_PRIVATE_KEY=your_private_key_in_hex_format

# Binance交易所配置 (必填项)
LIGHTER_BINANCE_API_KEY=your_binance_api_key_here
LIGHTER_BINANCE_SECRET_KEY=your_binance_secret_key_here
LIGHTER_BINANCE_TESTNET=false

# 可选项 (有默认值)
LIGHTER_LIGHTER_BASE_URL=https://api.lighter.xyz
LIGHTER_LIGHTER_CHAIN_ID=1
LIGHTER_LIGHTER_ACCOUNT_INDEX=1
LIGHTER_LIGHTER_API_KEY_INDEX=0

# 交易配置
LIGHTER_TRADING_USDT_AMOUNT=1000
LIGHTER_TRADING_USDC_AMOUNT=1000
LIGHTER_TRADING_LEVERAGE=3

# 策略配置
LIGHTER_STRATEGY_TYPE=arbitrage
LIGHTER_STRATEGY_SPREAD_PERCENT=0.1

# 日志配置
LIGHTER_LOGGING_LEVEL=info
LIGHTER_LOGGING_OUTPUT=logs/app.log

# 应用配置
LIGHTER_APP_ENVIRONMENT=production